datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Employee {
  id              String @default(uuid()) @id
  name            String
  estimatedHours  Int
  squadId         String
  squad           Squad @relation(fields: [squadId], references: [id])
  reports         Report[]
  
}

model Squad {
  id              String @default(uuid()) @id
  name            String
  employees       Employee[]
}

model Report {
  id              String  @default(uuid()) @id
  description     String
  employee        Employee @relation(fields: [employeeId], references: [id])
  employeeId      String
  spentHours      Int
  createdAt       DateTime @default(now())
}